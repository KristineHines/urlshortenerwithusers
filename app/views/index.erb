<div class="container">
  <h1>Welcome to Fab and Kris' Awesome Url Shortener!</h1>
  <p>Hello, world!</p>

  <ul>
    <% @list_short_urls.each  do |url| %>
      <li> <a href='/<%= url.short_url %>'><%= url.short_url %></a>
        <%= url.click_count %>  Clicks</li>
    <% end %>
  </ul>

  <form action='/urls' method='post'>
    Your url (Please include http:// in your link!):  <input type="text" name="long_url">
    <input type="submit" value="Shorten!">
  </form>
    <p><%= @error %></p>
</div>

<div class="container">
    <form action='/login' method='post'>
    Email:    <input type="text" placeholder="email" name="email">
    <br>
    Password: <input type="password" placeholder="password" name="password">
              <input type="submit" value="Login">
  </form>
  <br>
  <p><%= @message %></p>
  <a href='/create'>Click here to create an account</a>
</div>

